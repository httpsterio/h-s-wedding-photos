<h2>Viralliset hääkuvat</h2>
<div class="pswp-gallery" id="photogallery">
  {# Iterating all objects in _data/photos.json #}
  {% for photo in photos -%}


  {# Last object in json is empty so ignore that #}
  {% if photo.url | length %}
  <a href="{{ photo.url }}" data-pswp-width="{{ photo.width }}" data-pswp-height="{{ photo.height }}" target="_blank" class="gallery-img">
    {# <img src="{{ photo.thumb }}" alt="{{ photo.alt }}" width="300px" height="300px"/> #}

    <picture>
      <!--This is the optional AVIF image-->
      <source type="image/avif" srcset="{{ photo.thumbAvif }}">
      <!--This is the fallback JPEG image-->
      <img loading="lazy" alt="{{ photo.alt }}" src="{{ photo.thumb }}" width="300px" height="300px">
    </picture>

  </a>
  {% endif %}
  {%- endfor %}
</div>
